# enable clipboard
set selection-clipboard clipboard

# scrollbars
set window-title-basename "true"
set window-title-page "true"
set guioptions " "

# Remove paddings
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

# Adjust page
set window-height 1000
set window-width 1000
set adjust-open "width"

# Font
set font "FiraCode 14"

# Key-bindings
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

# Colors
set default-bg "#000000"
set default-fg "#232128" # Used to show the title since gtk takes the default foreground color

#set default-bg "#ffffff"
#set default-fg "#000000" # Used to show the title since gtk takes the default foreground color

# Dark mode colors
set recolor "true"
set recolor-darkcolor "#CFCFCF"
set recolor-lightcolor "#232128"
set recolor-reverse-video "true"
set recolor-keephue "true"

# Inverse search
set synctex true
set synctex-editor-command "code -g %{input}:%{line}"
